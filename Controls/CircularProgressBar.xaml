<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawables="clr-namespace:Maui.CircularProgress.Net.Drawables"
             x:Class="Maui.CircularProgress.Net.Controls.CircularProgressBar"
             x:Name="this">

    <GraphicsView>
        <GraphicsView.Drawable>
            <drawables:CircularProgressBarDrawable
                Progress="{Binding Progress, Source={x:Reference this}}"
                MaxProgress="{Binding MaxProgress, Source={x:Reference this}}"
                Size="{Binding Size, Source={x:Reference this}}"
                TextColor="{Binding TextColor, Source={x:Reference this}}"
                Thickness="{Binding Thickness, Source={x:Reference this}}"
                ProgressColor="{Binding ProgressColor, Source={x:Reference this}}"
                ProgressLeftColor="{Binding ProgressLeftColor, Source={x:Reference this}}"
                ShowText="{Binding ShowText, Source={x:Reference this}}"
                ProgressEdgeShape="{Binding ProgressEdgeShape, Source={x:Reference this}}"
                Shape="{Binding Shape, Source={x:Reference this}}"/>
        </GraphicsView.Drawable>
    </GraphicsView>

</ContentView>
